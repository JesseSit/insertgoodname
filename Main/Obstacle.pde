class Obstacle {
  
  // ======================== VARIABLES ================================================
  float x, y;
  float v;
  float h, w;
  
  // ======================= CONSTRUCTORS ================================================
  Obstacle() {
    x = random(1,800);
    y = 50;
    v = random(3) + 1;
    h = random(30) + 10;
    w = random(30) + 10;
  }
  
  // ======================== DISPLAY ================================================
  void display() {
     rect(x, y, w, h);
     fill(137, 137, 137);
  }
 
  // ========================= MOVE ==================================================
  void move() {
      y += v; 
  }
  
} // ================================================================================================