class Obstacle {
  
  // ======================== VARIABLES ================================================
  float x, y;
  float v;
  
  // ======================= CONSTRUCTORS ================================================
  Obstacle() {
    x = random(1,800);
    y = random(1,400);
    v = random(30) + 1;
  }
  
  // ======================== DISPLAY ================================================
  void display() {
     rect(x, y, random(40), random(40));
     fill(137, 137, 137);
  }
 
  // ========================= MOVE ==================================================
  void move() {
    if (random(100) > 50) {
      y += v; 
    }
    else {
      y -= v; 
    }
  }
  
} // ================================================================================================